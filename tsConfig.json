{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["shared/**/*", "backend/src/**/*", "frontend/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
